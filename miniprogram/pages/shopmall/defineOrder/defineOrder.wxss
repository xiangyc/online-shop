/* pages/shopmall/defineOrder/defineOrder.wxss */
 
page{font-family: 'PingFang SC';background:#f8f8f8;padding-bottom:50px;}
 
image{width:100%;}
 
view{overflow: hidden;}
 
page .van-button--primary{color:#fff;background-color:#ffb11b;border:1px solid #ffb11b;}
 
page .van-button--plain{background-color:transparent;}
 
page .van-button--plain.van-button--primary{color:#ffb11b;}
 
.hidden{display:none!important;}
 
.popup-box .van-popup{padding-bottom:0;}
 
.order{background:#fff;margin-top:10px;position:relative;}
 
.order-way::after{position:absolute;background:#fff url('https://app.jsz.top/image/goldShop/bg-address.jpg') bottom repeat-x;background-size:22px 1px;width:100%;height:1px;bottom:0;left:0;content:'';display:block;}
 
.order-list{padding:0 15px;border-bottom:1px solid #e8e8e8;font-size:14px;height:50px;line-height:50px;}
 
.order-list.border-none{border-bottom:0;}

.address-default{height:64px;line-height:64px;}
.address-con-info{line-height:14px;padding:8px 0;}
.address-con-name{margin-right:10px;}
.address-con-text{height:32px;line-height:14px;text-align:right;padding:8px 0;}
 
.arrow{padding:0 30px 0 15px;position:relative;}
 
.icon-arrow{position:absolute;right:10px;top:50%;margin-top:-7px;font-size:14px;line-height: 1;color:#666;}
 
.list-left{float:left;}
 
.list-right{float:right;}
 
.order-pro-info{border-bottom:1px solid #e8e8e8;padding:11px 15px;}
 
.order-pro-img{width:80px;height:80px;float:left;background:#eee;}
 
.order-pro-img image{width:80px;}
 
.order-pro-text{padding-left:10px;font-size:12px;color:#999;}
 
.order-pro-text-material{height:40px;line-height:20px;}
 
.order-pro-text-info,.order-pro-text-num{overflow:hidden;font-size:14px;color:#2d2d2d;}
 
.order-pro-text-material-info{width:85%;}
 
.order-pro-text-num{width:15%;text-align: right;}
 
.order-pro-text-tips{background:url(https://app.jsz.top/image/goldShop/icon-sigh-gray.png) left no-repeat;background-size:12px 12px;padding-left:15px;height:20px;line-height:20px;}
 
.submit-order .van-submit-bar__bar--safe{padding-bottom:0;}
 
.submit-order .van-button--danger{color:#fff;background-color:#ffb11b;border:1px solid #ffb11b;}

.popup-invoice-title{text-align:center;position:relative;height:50px;line-height:50px;border-bottom:1px solid #e8e8e8;font-size: 16px;color: #2d2d2d;}
.popup-invoice-close{position:absolute;top:0;right:10px;}
.popup-invoice-close .van-icon{color:#999;font-size:18px;}
.popup-invoice-con{padding:0 15px;}
.popup-invoice-list{padding:11px 0;height:24px;line-height:24px;font-size:14px;color:#666;font-weight:normal;border-bottom:1px solid #e8e8e8;}
.popup-invoice-list .van-switch{margin-top:1px;}
.popup-invoice-header{margin-left:10px;border:1px solid #999;color:#999;padding:0 16px;border-radius:12px;}
.popup-invoice-header.active{border:1px solid #ffb11b;color:#ffb11b;}
.popup-invoice-input{display:block;border:1px solid rgba(0,0,0,0.1);border-top:0;padding:0;margin:0 0 10px;}
.disabled .van-cell{background:#f4f4f4;}
.disabled .popup-invoice-input{border:1px solid #e8e8e8;border-top:0;}
.disabled .van-field__body{color:#fff;}