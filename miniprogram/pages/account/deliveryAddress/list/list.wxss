/* pages/account/deliveryAddress/list/list.wxss */
page{font-family: 'PingFang SC';background:#f8f8f8;}
image{width:100%;margin:0 auto;display:block;height:auto;}
page .van-button--primary{color:#fff;background-color:#ffb11b;border:1px solid #ffb11b;}
page .van-button--plain{background-color:transparent;}
page .van-button--plain.van-button--primary{color:#ffb11b;}
.list-norecode {text-align: center;position:absolute;top:50%;margin-top:-120px;left:0;width:100%;z-index: 2;}
.list-norecode image{width:180px;}
.list-norecode .van-button{padding:0 30px;margin-top:30px;}
.list-con {padding: 15px;background:#fff;margin-top:10px;}
.list .van-checkbox__icon-wrap{line-height:20px;}
.list .van-checkbox__icon{width:16px;height:16px;font-size:12px;}
.list-user{font-size:15px;color:#333;padding-bottom:2px;}
.list-name{font-weight: bold;padding-right: 10px;}
.list-mobile{padding-right:10px;}
.list-address{font-size:12px;color:#999;}
.list-tag,.list-tag-manage{padding:0 5px;border-radius:3px;background:#666;font-size:12px;color:#fff;margin-left:-5px;}
.list-manage{overflow:hidden;}
.list-checkbox{float:left;}
.list-delete{float:right;}
.list-tag-manage{background:none;color:#999;padding:0;font-size:14px;line-height:29px;}
.list-manage .van-checkbox__icon{border:1px solid #666;}
.list-delete{height:30px;line-height:30px;background:none;border:none;font-size:14px;color:#666;}
.list-delete .van-icon{font-size:18px;line-height:30px;float:left;margin-right:5px;}
.new-address-btn{position:fixed;bottom:0;width:100%;}